
@model SalesWebMvcProject.Models.Seller; 

@{
    ViewData["Title"] = "Remover";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<h3>Tem certeza que quer deletar? </h3>

<div>
    <hr />
    <div class="dl-horizontal">
        <dt>Nome:</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>E-mail:</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>Data de nascimento:</dt>
        <dd>@Html.DisplayFor(model => model.BirthDate)</dd>

        <dt>Salário:</dt>
        <dd>@Html.DisplayFor(model => model.BaseSalary)</dd>
    </div>
    <br />
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-warning">Voltar</a>
    </form>
</div>
