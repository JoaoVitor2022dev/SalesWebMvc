@model SalesWebMvcProject.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Remover</h1>

<h3>Tem certeza que quer remover?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h6>Nome:</h6>
        </dt>
        <dd class = "col-sm-10">
            <h5>@Html.DisplayFor(model => model.Name)</h5>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
    <br/>
    <div>
        <a asp-action="Index" class="btn btn-warning">Voltar</a>
    </div>
</div>
